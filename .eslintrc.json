{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-throw-literal": 0,
        "indent": ["error", 2],
        "react/jsx-max-props-per-line": [1, { "maximum": 2 }],
        "react/jsx-first-prop-new-line": 1
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
